<Window x:Class="TaxiManagementWPF.DropFareDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Drop Fare" Height="250" Width="400" Background="DarkSlateGray">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Taxi Number:" Grid.Row="0" Margin="10" Foreground="LightGreen" VerticalAlignment="Center"/>
        <TextBox x:Name="TaxiNumberTextBox" Grid.Row="0" Margin="10" Width="200" Background="DarkSlateGray" Foreground="LightGreen"/>

        <TextBlock Text="Price Paid:" Grid.Row="1" Margin="10" Foreground="LightGreen" VerticalAlignment="Center"/>
        <CheckBox x:Name="PricePaidCheckBox" Grid.Row="1" Margin="10" Foreground="LightGreen"/>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
            <Button Content="OK" Width="100" Height="30" Click="OkButton_Click"/>
            <Button Content="Cancel" Width="100" Height="30" Click="CancelButton_Click" Margin="10,0,0,0"/>
        </StackPanel>
    </Grid>
</Window>
