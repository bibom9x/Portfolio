<Window x:Class="TaxiManagementWPF.PaymentDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Payment Confirmation" Height="200" Width="300" Background="DarkSlateGray">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Was the price paid?" Grid.Row="0" Margin="10" Foreground="LightGreen" HorizontalAlignment="Center"/>

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
            <Button Content="Yes" Width="100" Height="30" Click="YesButton_Click"/>
            <Button Content="No" Width="100" Height="30" Click="NoButton_Click" Margin="10,0,0,0"/>
        </StackPanel>
    </Grid>
</Window>
